<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Reciplette</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Reciplette</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/">Recipes</a>
              </li> 
              <li class="nav-item">
                <a class="nav-link" href="/category">Categories</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/addRecipe">Add recipe</a>
              </li> 
              <li class="nav-item">
                <a class="nav-link" href="/addCategory">Add category</a>
              </li> 
              <li class="nav-item">
                <a class="nav-link" href="/roulette">Roulette</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>
    <div class="row">
        <% for(let i = 0; i < category.length; i++) { %> 
          <div class="col-md-4"> 
            <div class="card mb-4"> 
              <div class="card-body"> 
                <h5 class="card-title">
                <h5 class="card-title">
                    <%= category[i].categoryName %>
                </h5>
                </h5>
                <div class="btn-group" role="group" aria-label="Category Actions">
                  <button type="button" class="btn btn-secondary" onclick="window.location.href='/editCategory/<%= category[i].categoryID %>'">Edit</button>
                  <form action="/deleteCategory" method="POST">
                    <input type="hidden" name="categoryID" value="<%= category[i].categoryID %>">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </div>
              </div>
            </div> 
          </div>
          <% } %>
        </div>
    </div>
</body>